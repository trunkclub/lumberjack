{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "utils",
    "paths": {
      "*": [
        "node_modules/*",
        "client/types/*",
        "utils/*"
      ]
    }
  },
  "include": [
    "utils/**/*",
    "node_modules/@types/puppeteer/index.d.ts"
  ]
}
